require 'rake/clean'
require 'rbconfig'

$INCLUDES = "-I#{Config::CONFIG['archdir']}"
$CFLAGS = "#{Config::CONFIG['CFLAGS']}"
$LDFLAGS = '-lruby'

case RUBY_PLATFORM
when /darwin/
    $INCLUDES << ' -F/System/Library/Frameworks'
    $LDFLAGS << ' -framework GLUT -framework OpenGL'
else
    #
end

GL_LIB = "ext/gl/gl.#{Config::CONFIG['DLEXT']}"

LIBS = GL_LIB

CLEAN.include( '**/*.o', LIBS )

task :default => [ LIBS ]

rule '.o' => '.c' do |t|
    cmd = "cc #{$INCLUDES} #{$CFLAGS} -c -o #{t.name} #{t.source}"
    puts "============== #{cmd}"
    sh cmd
end

file GL_LIB => [ 'ext/gl/gl.o', 'ext/common/rbogl.o' ] do |t|
    cmd = "#{Config::CONFIG['LDSHARED']} #{$LDFLAGS} #{$CFLAGS} -o #{t.name} #{t.prerequisites.join(' ')}"
    puts "============== #{cmd}"
    sh cmd
end
    
file 'ext/common/rbogl.o' => [ 'ext/common/rbogl.h' ]
